<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="ODataExample.SettingsPage">
	<ContentPage.Content>
		<StackLayout Margin="10">
			<Label
				FontSize="Medium"
				Margin="20,40,0,0" 
				Text="URL des Webservice"/>
			<Entry
				Text="{Binding Url}"
				Margin="20,10,0,0" 
				Placeholder="Geben Sie die URL des Webservices ein"/>

			<Label 
				FontSize="Medium"
				Margin="20,40,0,0" 
				Text="Google API Key"/>
			<Entry 
				Margin="20,10,0,0" 
				Placeholder = "Geben Sie Ihren Google API Key ein"
				Text="{Binding ApiKey}"/>

			<Button  
				Style="{StaticResource buttonStyle}" 
				Command = "{Binding SettingsCommand}"
				FontSize = "Medium"
				Margin= "0,60,0,0"
				VerticalOptions="Center"
				HorizontalOptions="Center" 
				Text="Speichern"/>
		</StackLayout> 
	</ContentPage.Content>
</ContentPage>
